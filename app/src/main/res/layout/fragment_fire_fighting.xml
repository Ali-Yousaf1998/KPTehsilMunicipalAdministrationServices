<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:paddingBottom="@dimen/edit_margin"

    tools:context=".AppModules.FireFighting.FireFighting">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/edit_margin">

        <View
            android:id="@+id/viewIndicatorFireFighting"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/reycler_view_margin"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/driver_txt_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewIndicatorFireFighting"
            android:layout_marginLeft="@dimen/edit_margin"
            android:layout_marginTop="@dimen/edit_margin"
            android:layout_marginRight="@dimen/edit_margin"
            android:text="@string/driver_name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameOfDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/driver_txt_field"
            android:layout_marginLeft="@dimen/edit_margin"
            android:layout_marginRight="@dimen/edit_margin"
            android:text="@string/name_of_driver"
            android:textColor="@color/txt_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/contact_txt_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameOfDriver"
            android:layout_marginLeft="@dimen/edit_margin"
            android:layout_marginTop="@dimen/edit_margin"
            android:layout_marginRight="@dimen/edit_margin"
            android:text="@string/contact_no"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_txt_field"
            android:layout_marginLeft="@dimen/edit_margin"
            android:layout_marginRight="@dimen/edit_margin"
            android:text="Driver number"
            android:textColor="@color/txt_color"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/call_image_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_txt_field"
            android:layout_marginLeft="@dimen/edit_margin_top"
            android:layout_toRightOf="@id/phone_number"
            android:background="@null"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_phone_black_24dp" />

        <TextView
            android:id="@+id/notification_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/call_image_btn"
            android:layout_marginLeft="@dimen/edit_margin"
            android:layout_marginTop="@dimen/edit_margin_top"
            android:text="Send Notification"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/notificaty_image_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_number"
            android:layout_marginLeft="@dimen/edit_margin"
            android:layout_marginTop="@dimen/edit_margin_top"
            android:layout_toRightOf="@id/notification_txt"
            android:background="@null"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_notifications_active_black_24dp" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progresBar"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />

    </RelativeLayout>


</FrameLayout>