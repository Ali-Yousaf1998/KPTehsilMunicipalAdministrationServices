<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:id="@+id/frameLayout"
    android:background="#16B4B2B2"
    tools:context=".FireFighting.FireFighting">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/contact_txt_field"
         android:text="@string/contact_no"
         android:layout_marginLeft="@dimen/edit_margin"
         android:layout_marginRight="@dimen/edit_margin"
         android:layout_marginTop="@dimen/edit_margin"
         android:textSize="20sp"
         android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_txt_field"
        android:id="@+id/phone_number"
        android:text="03047901748 "
        android:layout_marginLeft="@dimen/edit_margin"
        android:layout_marginRight="@dimen/edit_margin"
        android:textSize="20sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/call_image_btn"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_toRightOf="@id/phone_number"
        android:layout_below="@id/contact_txt_field"
        android:layout_marginLeft="@dimen/edit_margin"
        android:src="@drawable/ic_local_phone_black_24dp"
        android:background="@null"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_txt"
        android:layout_below="@id/call_image_btn"
        android:text="Send Notification"
        android:layout_marginTop="@dimen/edit_margin_top"
        android:layout_marginLeft="@dimen/edit_margin"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificaty_image_btn"
        android:layout_toRightOf="@id/notification_txt"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_below="@id/phone_number"
        android:layout_marginLeft="@dimen/edit_margin"
        android:layout_marginTop="@dimen/edit_margin_top"
        android:src="@drawable/ic_notifications_active_black_24dp"
        android:background="@null"
        />

    </RelativeLayout>

</FrameLayout>