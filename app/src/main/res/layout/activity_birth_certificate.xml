<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppModules.Certificates.BirthCertificate">

    <include layout="@layout/app_tool_bar"
        android:id="@+id/child_birth_certificate_tool_bar"
       />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/child_birth_certificate_tool_bar"
>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- child name edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/childNameInBirthCertificate"
                android:hint="@string/child_name"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/margin_6"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="text"
                />

            <!-- child relation edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/childRelationWithApplicantBirthCertificate"
                android:layout_below="@id/childNameInBirthCertificate"
                android:hint="@string/child_religion_with_applicant"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="text"
                />

            <!-- child religion edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/childReligionInBirthCertificate"
                android:layout_below="@id/childRelationWithApplicantBirthCertificate"
                android:hint="@string/religion"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="text"
                />

            <!-- child father name edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/childFatherNameInBirthCertificate"
                android:layout_below="@id/childReligionInBirthCertificate"
                android:hint="@string/father_name"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="text"
                />

            <!-- child father cnic edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/childFatherCnicInBirthCertificate"
                android:layout_below="@id/childFatherNameInBirthCertificate"
                android:hint="@string/father_cnic"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="number"
                />

            <!-- child mother name edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/childMotherNameInBirthCertificate"
                android:layout_below="@id/childFatherCnicInBirthCertificate"
                android:hint="@string/mother_name"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="text"
                />

            <!-- child mother cnic edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/childMotherCnicInBirthCertificate"
                android:layout_below="@id/childMotherNameInBirthCertificate"
                android:hint="@string/mother_cnic"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="number"
                />

            <!-- child grand father name edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/childGrandFatherNameInBirthCertificate"
                android:layout_below="@id/childMotherCnicInBirthCertificate"
                android:hint="@string/grand_father_name"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="text"
                />

            <!-- child grand father cnic edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/childGrandFatherCnicInBirthCertificate"
                android:layout_below="@id/childGrandFatherNameInBirthCertificate"
                android:hint="@string/grand_father_cnic"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="number"
                />

            <!-- District of birth  edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/childDistrictOfBirthInBirthCertificate"
                android:layout_below="@id/childGrandFatherCnicInBirthCertificate"
                android:hint="@string/district_of_birth"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="text"
                />

            <!-- Date of birth -->
            <TextView
                android:onClick="clickOnDateOfBirthField"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/childDateOfBirthInBirthCertificate"
                android:layout_below="@id/childDistrictOfBirthInBirthCertificate"
                android:hint="@string/date_of_birth"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:gravity="center|left"
                android:inputType="text|date"
                />

            <!-- Vaccinated   edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/childVaccinatedInBirthCertificate"
                android:layout_below="@id/childDateOfBirthInBirthCertificate"
                android:hint="@string/vaccinated"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="text"
                />

            <!-- Place of birth edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/childPlaceOfBirth"
                android:layout_below="@id/childVaccinatedInBirthCertificate"
                android:hint="@string/place_of_birth"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="text"
                />

            <!-- Doctor or MidWife name edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/doctorOrMidWifeNameInBirthCertificate"
                android:layout_below="@id/childPlaceOfBirth"
                android:hint="@string/doctor_or_midwife_name"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="text"
                />

            <!-- Disability edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/disabilityInBirthCertificate"
                android:layout_below="@id/doctorOrMidWifeNameInBirthCertificate"
                android:hint="@string/disability"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="text"
                />

            <!-- Address edit text -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_txt_bg"
                android:id="@+id/addressInBirthCertificate"
                android:layout_below="@id/disabilityInBirthCertificate"
                android:hint="@string/address"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:paddingLeft="@dimen/edit_margin"
                android:inputType="text"
                />


           <androidx.appcompat.widget.AppCompatSpinner
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:id="@+id/childGenderInBirthCertificate"
               android:layout_below="@id/addressInBirthCertificate"
               android:hint="Select"
               android:layout_marginLeft="@dimen/edit_margin"
               android:layout_marginRight="@dimen/edit_margin"
               android:layout_marginTop="@dimen/reycler_view_margin"
               android:spinnerMode="dropdown"
               android:background="@drawable/spinner_bg"
               android:elevation="@dimen/margin_6"
               />

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/ucSpinner"
                android:layout_below="@id/childGenderInBirthCertificate"
                android:hint="Select"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_marginTop="@dimen/reycler_view_margin"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_bg"
                android:elevation="@dimen/margin_6"
                />

            <!-- Button upload noc -->
            <Button
                android:onClick="uploadCnicImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/btnUploadCnicInChildCertificate"
                android:layout_alignParentLeft="true"
                android:textColor="@color/txt_color"
                android:layout_marginLeft="@dimen/edit_margin"
                android:layout_marginRight="@dimen/edit_margin"
                android:layout_below="@+id/ucSpinner"
                android:gravity="center"
                android:layout_marginTop="@dimen/edit_margin"
                android:textSize="15sp"
                android:text="@string/upload_cnic"/>

            <!-- Text no front side of cnic choosen -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtFrontOfCnic"
                android:layout_below="@+id/btnUploadCnicInChildCertificate"
                android:text="@string/choose_front_side"
                android:layout_marginTop="@dimen/edit_margin_top"
                android:layout_marginLeft="@dimen/txt_margin_left"
                android:layout_centerHorizontal="true"
                />

            <!-- Image front cnic upload -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/chooseCnicFrontImage"
                android:layout_below="@+id/btnUploadCnicInChildCertificate"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="@dimen/edit_margin"
                android:layout_marginLeft="@dimen/txt_margin_left"
                android:visibility="invisible"
                android:layout_alignParentLeft="true"
                />

            <!-- Text no front side of cnic choosen -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtBackOfCnic"
                android:layout_below="@+id/txtFrontOfCnic"
                android:text="@string/choose_front_side"
                android:layout_marginTop="@dimen/edit_margin_top"
                android:layout_marginLeft="@dimen/txt_margin_left"
                android:layout_centerHorizontal="true"
                />

            <!-- Image front cnic upload -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/chooseCnicBackImage"
                android:layout_below="@+id/btnUploadCnicInChildCertificate"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="@dimen/edit_margin"
                android:layout_marginLeft="@dimen/txt_margin_left"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/chooseCnicFrontImage"
                />


            <!-- Button Apply for children birth certificate -->
            <Button
                android:onClick="submitCertificateForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button"
                android:id="@+id/applyForChildBirthCertificate"
                android:backgroundTint="@color/txt_color"
                android:layout_marginLeft="@dimen/txt_margin_left"
                android:layout_marginRight="@dimen/txt_margin_left"
                android:layout_below="@+id/chooseCnicBackImage"
                android:gravity="center"
                android:layout_marginTop="@dimen/edit_margin"
                android:layout_marginBottom="@dimen/edit_margin_top"
                android:textSize="15sp"
                android:text="@string/apply"
                app:cornerRadius="16dp"/>



        </RelativeLayout>


    </ScrollView>



</RelativeLayout>